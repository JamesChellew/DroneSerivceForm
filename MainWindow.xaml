<Window x:Class="DroneSerivceForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DroneSerivceForm"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Left" Margin="30,22,0,8" Text="Name"/>
        <TextBox x:Name="TextBoxName" HorizontalAlignment="Left" Margin="30,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <TextBlock HorizontalAlignment="Left" Margin="30,62,0,8" Text="Name"/>
        <TextBox HorizontalAlignment="Left" Margin="30,77,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

        <TextBlock HorizontalAlignment="Left" Margin="30,102,0,8" Text="Name"/>
        <TextBox HorizontalAlignment="Left" Margin="30,117,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

        <TextBlock HorizontalAlignment="Left" Margin="30,142,0,8" Text="Name"/>
        <TextBox HorizontalAlignment="Left" Margin="30,157,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="250" Height="100"/>

        <TextBlock HorizontalAlignment="Left" Margin="185,22,0,8" Text="Service Tag"/>
        <TextBox HorizontalAlignment="Left" Margin="185,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>

        <RadioButton Content="Standard" HorizontalAlignment="Left" Margin="180,77,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Express" HorizontalAlignment="Left" Margin="180,117,0,0" VerticalAlignment="Top"/>

        <Button Content="Add Service"  HorizontalAlignment="Left" Margin="290,20,0,0" VerticalAlignment="Top" Width="100" Height="50"/>
        <Button HorizontalAlignment="Left" Margin="290,110,0,0" VerticalAlignment="Top" Width="100" Height="50" HorizontalContentAlignment="Center" Background="#FF41DD4A">
            <TextBlock Text="Complete Standard Service" TextWrapping="Wrap"/>
        </Button>
        <Button HorizontalAlignment="Left" Margin="290,200,0,0" VerticalAlignment="Top" Width="100" Height="50" HorizontalContentAlignment="Center">
            <TextBlock Text="Complete Express Service" TextWrapping="Wrap"/>
        </Button>
    </Grid>
</Window>
